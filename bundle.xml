<?xml version="1.0" encoding="utf-8"?>
<adapt_framework>
  <bundle>
    <name>form_text_editor</name>
    <label>Adapt Form Text Editor</label>
    <version>1.0.0</version>
    <type>extension</type>
    <namespace>\adapt\forms\text_editor</namespace>
    <description>Allows the use of TinyMCE in forms</description>
    <copyright>2015 Adapt Framework</copyright>
    <depends_on>
        <bundle>
          <name>forms</name>
          <version>1.0</version>
        </bundle>
        <bundle>
          <name>tinymce</name>
          <version>4.2</version>
        </bundle>
        <bundle>
          <name>adapt</name>
          <version>1.0</version>
        </bundle>
    </depends_on>
    <schema>
      <add>
        <table name="form_field_type">
          <record>
            <name>Text editor</name>
            <view>\adapt\forms\text_editor\view_field_text_editor</view>
          </record>
        </table>
      </add>
    </schema>
  </bundle>
</adapt_framework>
